extends layout

block content

  .page-header
    h3 Best Images
  div
    each image_row in images
      div.row
        each image in image_row
          div.col-xs-6.col-md-3
            div.thumbnail
              a(href='/image/' + image.image_id)
                img(src='/image/thumbnail/' + image.image_id + '.jpg')
              div.caption
                div Score: !{scores[image.id]}
                div
                  span
                    a(id="up_link" href='/image/' + image.image_id + '/up') Up
                  span !{' | '}
                  span
                    a(id="down_link" href='/image/' + image.image_id + '/down') Down
  div
    nav
      ul.pager
        li.previous(class=pagination.previous_enabled)
          a(href=pagination.previous_link) &larr; Better
        li.next(class=pagination.next_enabled)
          a(href=pagination.next_link) Worse &rarr;
