extends layout

block content
  .page-header
    h3
      = your_or_their
  if moderator_status
    div(style="font-style:italic;")
      = moderator_status
  div
  each image_row in images
    div.row
      each image in image_row
        div.col-xs-6.col-md-3
          div.text-center
            div.thumbnail.image-container
              a(href='/image/' + image.image_id)
                img(src='/image/thumbnail/' + image.image_id + image.extension)
              div.caption.image-caption
                div
                  = dates[image.image_id]
                if should_allow_delete
                  div
                    a(href='/image/' + image.image_id + '/delete') Delete
